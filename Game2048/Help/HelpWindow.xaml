<Window x:Class="Game2048.Help.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game2048.Help"
        mc:Ignorable="d"
        Title="Tutorial" Height="650" Width="800" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" MinWidth="450" MinHeight="500" Icon="/Game2048;component/2048IconSmall-01.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Frame x:Name="ContentFrame" Margin="4" NavigationUIVisibility="Hidden"/>
        <Grid Background="LightGray" Grid.Row="1">
            <Button x:Name="BackBtn" Content="&#xE0A6;" FontFamily="Segoe MDL2 Assets" Width="28" Height="28" HorizontalAlignment="Left" Margin="8" Click="BackBtn_Click"/>
            <Button x:Name="NextBtn" Content="&#xE0AB;" FontFamily="Segoe MDL2 Assets" Width="28" Height="28" HorizontalAlignment="Right" Margin="8" Click="NextBtn_Click"/>
        </Grid>
    </Grid>
</Window>
