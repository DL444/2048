<UserControl x:Class="Game2048.Tile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game2048"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200"
             MouseUp="Tile_MouseUp">
    <UserControl.RenderTransform>
        <TranslateTransform />
    </UserControl.RenderTransform>

    <Grid x:Name="BackGrid" Margin="5" Background="DarkGreen">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="92*"/>
        </Grid.RowDefinitions>
        <Viewbox Grid.RowSpan="2">
            <Label Name="NumberBox" Content="0" FontWeight="Light"/>
        </Viewbox>
    </Grid>
</UserControl>
